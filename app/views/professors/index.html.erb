<p id="notice"><%= notice %></p>

<h1>Professors</h1>
<%= form_tag(search_professors_url, method: "get") do %>
    <%= label_tag(:q,"Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
    <% end %>


<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Office location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.first_name %></td>
        <td><%= professor.last_name %></td>
        <td><%= professor.email %></td>
        <td><%= professor.office_location %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
<%= button_to 'New Professor', new_professor_path, :method => "get" %>

