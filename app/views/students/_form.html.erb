<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name, id: :student_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name, id: :student_last_name %>
  </div>

  <div class="field">
    <%= form.label :credits %><br>
    <%= form.number_field :credits, id: :student_credits %>
  </div>

  <div class="field">
    <%= form.label :student_class %><br>
    <%= form.text_field :student_class, id: :student_student_class %>
  </div>
    <div class="field">
      <%= form.collection_check_boxes(:section_ids, @sections, :id, :section_number) %>
      <br>
    </div>
    <div>
      <% @sections.each do |section| %>
          <%= section.course.course_name %>
      <% end %>
    </div>


    <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
