<p id="notice"><%= notice %></p>

<h1>Sections</h1>
<%= form_tag(search_sections_url, method: "get") do %>
    <%= label_tag(:q,"Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Section number</th>
      <th>Class location</th>
      <th>course name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section_number %></td>
        <td><%= section.class_location %></td>
        <td><%= section.course.course_name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

</table>


<br>

<%= button_to 'New Section', new_section_path,:method=> "get" %>
